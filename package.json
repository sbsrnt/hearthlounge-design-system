{
  "name": "hearthlounge-design-system",
  "version": "0.24.4",
  "private": false,
  "dependencies": {
    "downshift": "^3.3.4",
    "framer-motion": "^1.6.14",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "node-sass": "^4.12.0",
    "polished": "^3.4.1",
    "pretty-quick": "^1.11.1",
    "prop-types": "^15.7.2",
    "rc-slider": "^8.7.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-laag": "^1.2.0",
    "react-modal": "^3.10.1",
    "react-scripts": "3.2.0",
    "react-toastify": "^5.4.0",
    "resize-observer-polyfill": "^1.5.1",
    "styled-components": "^4.4.0"
  },
  "scripts": {
    "start": "start-storybook -p 9009 -s public",
    "build": "BABEL_ENV=production babel src -d dist",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "release": "auto shipit",
    "semantic-release": "semantic-release",
    "eslit": "eslint .",
    "prettify": "pretty-quick",
    "build-storybook": "build-storybook -s public",
    "build-docs": "build-storybook -s public --docs",
    "build-styles": "webpack --mode='production'",
    "build:js": "yarn build:js:esm",
    "build:js:esm": "BABEL_ENV=esm babel src -d lib/esm --ignore *.test.js",
    "extract-tokens": "node -r esm scripts/extract-tokens.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,mdx,json}": "pretty-quick --staged",
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "csscomb --tty-mode --",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-lodash": "^3.3.4",
    "@babel/cli": "^7.6.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/git": "^7.0.16",
    "@storybook/addon-a11y": "^5.2.1",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-docs": "^5.2.1",
    "@storybook/addon-knobs": "^5.2.1",
    "@storybook/addon-links": "^5.2.1",
    "@storybook/addon-storysource": "^5.2.1",
    "@storybook/addons": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "@testing-library/jest-dom": "^4.1.2",
    "@testing-library/react": "^9.3.0",
    "@types/jest": "^24.0.18",
    "autoprefixer": "^9.6.5",
    "classnames": "^2.2.6",
    "commitizen": "^4.0.3",
    "csscomb": "^4.3.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "esm": "^3.2.25",
    "fs": "^0.0.1-security",
    "husky": "^3.0.8",
    "jest-circus": "^24.9.0",
    "lint-staged": "^9.4.1",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.18.2",
    "sass-extract": "^2.1.0",
    "semantic-release": "^15.13.24",
    "webpack-cli": "^3.3.9",
    "webpack-fix-style-only-entries": "^0.4.0"
  },
  "description": "HearthLounge design system",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "repository": "https://github.com/sbsrnt/hearthlounge-design-system.git",
  "author": "Sebastian Krzy≈ºanowski <eskrzy@gmail.com>",
  "license": "MIT",
  "files": [
    "lib"
  ]
}
